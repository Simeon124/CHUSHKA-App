@model Product
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    //ViewData["Title"] = "CreateProductPage";
}

<center>
    <form class="form-control" style="padding-right: 20rem; padding-left: 20rem" asp-controller="Product" asp-action="EditProduct" method="post">
        <input style="display:none" class="input-group" type="text" name="Id" value="@Model.Id" />
        
        <label class="col-form-label" asp-for="Name"></label>
        <input class="input-group" type="text" name="Name" value="@Model.Name" />
        <span class="alert-danger" asp-validation-for="Name"></span>

        <br>
        <label class="col-form-label" asp-for="Price"></label>
        <input class="input-group" type="text" name="Price" value="@Model.Price" />
        <span class="alert-danger" asp-validation-for="Price"></span>

        <br>
        <label class="col-form-label" asp-for="Description"></label>
        <input class="input-group" type="text" name="Description" value="@Model.Description" />
        <span class="alert-danger" asp-validation-for="Description"></span>

        <br>
        <label class="col-form-label" asp-for="Type"></label>

        <div style="display:flex; flex-direction:row; justify-content:center">
            <input class="form-check-input" type="radio" name="Type" value="0" />
            <p>Food</p>
            <input class="form-check-input" type="radio" name="Type" value="1" />
            <p>Domestic</p>
            <input class="form-check-input" type="radio" name="Type" value="2" />
            <p>Health</p>
            <input class="form-check-input" type="radio" name="Type" value="3" />
            <p>Cosmetic</p>
            <input class="form-check-input" type="radio" name="Type" value="4" />
            <p>Other</p>
        </div>


        <span class="alert-danger" asp-validation-for="Type"></span>

        <button type="submit">Update</button>
        <button asp-action="ProductPage" asp-route-id="@Model.Id">Cancel</button>
    </form>
</center>

