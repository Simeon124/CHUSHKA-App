@model Product
@{
    ViewData["Title"] = "ProductPage";
}

<style>
    .btn-danger
    {
        box-shadow: 0rem 0rem 2rem red !important;
    }

    .btn-warning
    {
        box-shadow: 0rem 0rem 2rem yellow !important;
    }

    .btn-success
    {
        box-shadow: 0rem 0rem 2rem green !important;
    }
</style>

<center>
    <h1>@Model.Name</h1>

    <hr>
    <br>

    <div style="display:flex; flex-direction:row; justify-content: space-evenly">
        <h2>Type: @Model.Type</h2>
        <h2>Price: @Model.Price</h2>
    </div>


    <hr>
    <br>

    <h2>Description:</h2>
    <p>@Model.Description</p>

    <hr style="margin-bottom:10rem; margin-top:5rem;">

    @if (this.User.Identity!.IsAuthenticated)
    {
        <button class="fs-2 btn btn-success" style="margin-bottom:3rem" asp-controller="Order" asp-action="MakeAnOrder" asp-route-productId="@Model.Id">Order</button>
    }
    <br />

    @if (this.User.IsInRole("Admin"))
    {
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        <a class="btn btn-warning" asp-action="EditProductPage" asp-route-id="@Model.Id">Edit</a>
    }
</center>